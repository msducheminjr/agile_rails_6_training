<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1><%= t('activerecord.models.order').pluralize.titleize %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Show', order_path(order, locale: I18n.locale) %></td>
        <td><%= link_to 'Edit', edit_order_path(order, locale: I18n.locale) %></td>
        <td><%= link_to 'Destroy', order_path(order, locale: I18n.locale), method: :delete, data: { confirm: t('.destroy_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
